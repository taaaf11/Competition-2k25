<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    tools:context=".DiscussionBoardFragment">

    <!-- Discussion Board Title -->
    <TextView
        android:id="@+id/tvDiscussionBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discussion Board"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- RecyclerView for Discussion Threads -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewThreads"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDiscussionBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Create New Thread Button -->
    <Button
        android:id="@+id/btnCreateThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Thread"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewThreads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:padding="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>